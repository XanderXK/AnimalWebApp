@model AnimalWebApp.Models.AddUser

<div class="bg-secondary bg-opacity-10 py-3">
    <div class="container">
        <h1>Add New User</h1>
    </div>
</div>

<div class="container py-3">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" id="name" asp-for="Name"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" id="email" asp-for="Email"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="password" asp-for="Password"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Admin</label>
            <input class="form-check-input" id="isAdmin" asp-for="IsAdmin"/>
        </div>


        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>