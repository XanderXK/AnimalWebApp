@model ICollection<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="bg-secondary bg-opacity-10 py-3">
    <div class="container">
        <h1>Users</h1>
    </div>
</div>

<div>
    <div class="container py-5">

        <a class="btn btn-dark" asp-area="" asp-controller="AdminUsers" asp-action="Add">Add</a>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Email</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>
                        <form method="post" asp-controller="AdminUsers" asp-action="Delete" asp-route-id="@item.Id">
                            <button class="btn btn-light" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>