@model AnimalWebApp.Models.ViewModels.RegisterUser

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-5">
            <h1 class="mt-3 mb-3 h3">Register</h1>

            <div >
                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">UserName</label>
                        <input type="text" id="userName" class="form-control" asp-for="UserName"/>
                        <span class="text-dark" asp-validation-for="UserName"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" id="email" class="form-control" asp-for="Email"/>
                        <span class="text-dark" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" id="password" class="form-control" asp-for="Password"/>
                        <span class="text-dark" asp-validation-for="Password"></span>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-dark">Register</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>