@model List<AnimalPost>

<div class="bg-secondary bg-opacity-10 py-3">
    <div class="container">
        <h1>All Posts</h1>
    </div>
</div>

<div class="container py-5">
    <table class="table">
        <thead>
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td> </td>
        </tr>
        </thead>
        <tbody>
        @foreach (var animalPost in Model)
        {
            <tr>
                <td>@animalPost.Id</td>
                <td>@animalPost.Title</td>
                <td><a asp-area="" asp-controller="AdminPosts" asp-action="Edit" asp-route-id="@animalPost.Id">Edit</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>