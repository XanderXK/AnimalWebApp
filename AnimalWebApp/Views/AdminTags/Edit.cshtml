@model AnimalWebApp.Models.ViewModels.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-3">
    <div class="container">
        <h1>Edit Tag</h1>
    </div>
</div>

<div class="container py-3">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly=""/>
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName"/>
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Update</button>
                <button type="submit" class="btn btn-danger ms-2"
                        asp-area="" asp-controller="AdminTags" asp-action="Delete" asp-route-id="@Model.Id">
                    Delete
                </button>
            </div>

        </div>
    </form>
</div>